# AI Model Configuration
GOOGLE_API_KEY=your_google_api_key_here
OPENAI_API_KEY=your_openai_api_key_here
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here

# Database Configuration
DATABASE_URL=sqlite:///sakhi_ai.db

# Application Configuration
FLASK_ENV=development
FLASK_DEBUG=True
SECRET_KEY=your_secret_key_here
UPLOAD_FOLDER=uploads
MAX_CONTENT_LENGTH=16777216

# Voice Configuration
ELEVENLABS_VOICE_ID=your_voice_id_here
TTS_ENGINE=pyttsx3

# RAG Configuration
CHROMA_PERSIST_DIRECTORY=./chroma_db
CHROMA_COLLECTION_NAME=sakhi_medical_docs
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

# Mental Health Assessment
ASSESSMENT_MODEL_PATH=./models/mental_health_classifier.joblib
SENTIMENT_MODEL_PATH=./models/sentiment_analyzer.joblib

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=./logs/sakhi_ai.log

# API Configuration
API_HOST=0.0.0.0
API_PORT=5000
API_PREFIX=/api/v1

# Security
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:8050
RATE_LIMIT_PER_MINUTE=60

# Feature Flags
ENABLE_VOICE_RECOGNITION=True
ENABLE_FACE_EMOTION_DETECTION=True
ENABLE_DOCUMENT_UPLOAD=True
ENABLE_RAG_SYSTEM=True
ENABLE_MENTAL_HEALTH_ASSESSMENT=True